# LLM Configuration
# Choose your preferred provider: anthropic, openai, google (gemini), or leave blank for legacy config
LLM_PROVIDER=anthropic

# === Anthropic Configuration ===
# Use Claude models from Anthropic directly
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# Other models: claude-3-5-haiku-20241022, claude-3-opus-20240229, claude-sonnet-4-5-20250929

# === OpenAI Configuration ===
# Use GPT models from OpenAI directly
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
# Other models: gpt-4o-mini, gpt-4-turbo, o1, o3-mini

# === Google/Gemini Configuration ===
# Use Gemini models from Google AI Studio
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini/gemini-2.0-flash-exp
# Other models: gemini/gemini-1.5-pro, gemini/gemini-1.5-flash

# === Legacy LiteLLM Configuration ===
# For advanced users or custom endpoints (optional, overrides LLM_PROVIDER if set)
# LITELLM_MODEL=openrouter/openai/gpt-5.1-chat
# LITELLM_API_KEY=your_litellm_api_key_here
# LITELLM_API_BASE=https://openrouter.ai/api/v1

# === Legacy OpenRouter Configuration ===
# For using OpenRouter (optional, used if LLM_PROVIDER is not set)
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# === Local LM Studio Configuration ===
# For local LLM usage (activated with --local flag)
LMSTUDIO_API_KEY=None
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_LLM_MODEL=qwen/qwen3-30b-a3b-2507

# === General LLM Settings ===
LLM_MAX_TOKENS=8192
LLM_TEMPERATURE=0.1

# === Image Generation Configuration ===
# Choose image provider: openai, google, or openrouter
IMAGE_PROVIDER=openai
# OpenAI DALL-E models: dall-e-3, dall-e-2
IMAGE_MODEL=dall-e-3

# === Backend Server Configuration ===
# Backend server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# Max concurrent generation jobs
MAX_CONCURRENT_JOBS=3

# Review Settings
REVIEW_MAX_ROUNDS=3
REVIEW_SCORE_THRESHOLD=8.0

# Song Defaults
DEFAULT_SONG_GENRE=rock
DEFAULT_PERSONA=None
DEFAULT_TEMPO=120
DEFAULT_KEY=C
DEFAULT_INSTRUMENTS=guitar,bass,drums
DEFAULT_MOOD=happy